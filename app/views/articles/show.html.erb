<div class="text-4xl mt-6 mx-auto my-6 font-bold  text-center text-pink-400 hover:text-pink-800 "> <%= @article.title %></div>
<div class="flex justify-center flex-wrap gap-4">
  <div class="h-[80vh] max-w-xl w-full  mx-auto bg-gradient-to-r from-gray-300 via-white to-gray-300 p-28 rounded-lg shadow-xl "> 
  <% if @article.image.attached? %>
    <%= image_tag @article.image, class: "w-56 h-56 mx-auto  object-cover  mb-2 transition-transform transform hover:scale-125 rounded-md" %>
  <% else %>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT3rgH8miiiJ4Mh4ngRtXZQcWZHVdIMeI9zDT_sHcIfSQ&s" class="w-40 h-48 mx-auto  object-cover mt-4  mb-2 transition-transform transform hover:scale-110 rounded-md">
  <% end %>   
    <div class="max-w-7xl text-center p-4 text-gray hover:text-pink-300">
      <%= @article.body %>
    </div> 
    <ul class="flex flex-wrap justify-center gap-4">
      <li><%= link_to "EDIT", edit_article_path(@article),class:"flex  justify-center h-26 w-32 mx-auto sm:h-26 sm:w-32   border-2 border-gray-400 dark:border-gray-700 font-semibold text-black dark:text-black rounded-xl  hover:bg-pink-200  my-6 py-2" %></li>
      <li><%= link_to "DELETE", article_path(@article), method: :delete, data: { confirm: "Are you sure?" },class:"flex  justify-center h-26 w-32 mx-auto sm:h-26 sm:w-32   border-2 border-gray-400 dark:border-gray-700 font-semibold text-black dark:text-black rounded-xl  hover:bg-pink-200  my-6 py-2"%></li>
    </ul>
  </div>
  <div class="h-[80vh] max-w-xl w-full mx-auto bg-gradient-to-r from-gray-300 via-white to-gray-300 p-28 rounded-lg shadow-xl overflow-y-auto">
    <div class="text-3xl mx-auto my-6 mt-0 font-bold text-center text-gray hover:text-pink-300">Comments</div>
    <% if @article.comments.any? %>
      <%= render @article.comments %>
    <% else %>
      <p>No comments yet.</p>
    <% end %>
  </div>
  <div class="h-[80vh] max-w-xl  w-full mx-auto bg-gradient-to-r from-gray-300 via-white to-gray-300 p-28 rounded-lg shadow-xl ">
    <div class="text-2xl mx-auto my-6 font-bold  text-center text-gray hover:text-pink-300 ">Add a comment:</div>
    <%= render 'comments/form' %>
  </div>
</div>
<div class="space-x-4 m-6 flex flex-row-reverse gap-3">
  <%= link_to "Back", articles_path,class:" uppercase py-2 px-8 bottom-0 left-0 rounded-lg bg-transparent border-2 border-pink-500 text-pink-500 dark:text-white hover:bg-pink-500 hover:text-white text-md"%>
  <%= link_to "Home", root_path,class:" uppercase py-2 px-8 bottom-0 left-0 rounded-lg bg-transparent border-2 border-pink-500 text-pink-500 dark:text-white hover:bg-pink-500 hover:text-white text-md"%>
</div>

