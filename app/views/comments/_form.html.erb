<%= form_with model: [ @article, @article.comments.build ],html: { class: 'max-w-lg mx-auto ' } do |form| %>
    <div class="mb-4 mt-8">
    <%= form.label :commenter, class: 'block text-gray-700 text-md font-bold ' %><br>
    <%= form.text_field :commenter, class: 'form-input w-full px-3 py-2 border  rounded-md shadow-black shadow-lg' %>
  
  </div>
  <div class="mb-4 placeholder:">
    <%= form.label :body, class: 'block text-gray-700 text-md font-bold ' %><br>
    <%= form.text_area :body, class: 'form-textarea w-full px-3 py-2 border rounded-md shadow-black shadow-lg' %><br>
  </div>


  <div class="mb-8">
    <%= form.label :status, class: 'block text-gray-700 text-md font-bold ' %><br>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public'}, class: 'form-select w-full px-3 py-2 border rounded-md shadow-black shadow-lg'%>
  </div>
  <p>
    <%= form.submit 'Add Comment' ,class: 'flex  justify-center h-26 w-32 mx-auto sm:h-26 sm:w-32  border-2 border-gray-400 dark:border-gray-700 font-semibold text-black dark:text-black rounded-xl  hover:bg-pink-200  my-6 py-2'%>
  </p>
<% end %>

