<div class="text-4xl mt-6 mx-auto my-6 font-bold  text-center text-pink-300 hover:text-pink-500 "><h2>Sign up</h2></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: 'max-w-lg mx-auto ' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex items-center justify-center flex-wrap gap-4">
    <div class="shrink-0 flex flex-wrap justify-center">
      <!-- Image Preview Container -->
      <img id="preview_img" class="h-20 w-20 object-cover rounded-full" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRRNKEmBiAZl7Ftg31Rd0iZu4mjzvz42YMiashD4uzd0gwxI6w-MU5tTO0W3y7p_2qteIU&usqp=CAU" alt="Current profile photo" />
    </div>

    <label class="block">
      <span class="sr-only">Choose profile photo</span>
      <!-- File Input Field -->
      <%= f.file_field :image, onchange: "loadFile(event)", class: "block w-full text-sm text-slate-500
        file:mr-4 file:py-2 file:px-4
        file:rounded-full file:border-0
        file:text-sm file:font-semibold
        file:bg-violet-50 file:text-violet-700
        hover:file:bg-violet-100" %>
    </label>
  </div>
  <div class="mb-6">
    <%= f.label :first_name, "First Name", class:"block mb-2 text-sm font-medium text-gray-700" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 shadow-black shadow-lg" %>
  </div>
  <div class="mb-6">
    <%= f.label :last_name, "Last Name", class:"block mb-2 text-sm font-medium text-gray-700" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 shadow-black shadow-lg" %>
  </div>
  <div class="mb-6">
    <%= f.label :email, class:"text-sm font-medium text-gray-700 block mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500  shadow-black shadow-lg" %>
  </div>
  <div class="mb-6">
    <%= f.label :password, class:"text-sm font-medium text-gray-700 block mb-2" %>
    <% if @minimum_password_length %>
      <p class="text-xs text-gray-500 mb-1"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 shadow-black shadow-lg" %>
  </div>
  <div class="mb-6">
    <%= f.label :password_confirmation, class:"text-sm font-medium text-gray-700 block mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 shadow-black shadow-lg" %>
  </div>
  <div class="flex justify-center gap-4 mb-6 ">
    <%= f.submit "Sign up", class:"inline-flex items-center px-4 py-2 bg-pink-300 text-white rounded-md hover:bg-gray-700 font-medium" %>
    <%= link_to "Back", root_path,class:"inline-flex items-center px-4 py-2 bg-pink-300 text-white rounded-md hover:bg-gray-700 font-medium" %>

  </div>
  <div class="mt-4 text-center">
  Already have an account? <%= link_to "Log in", new_user_session_path, class:"inline-flex items-center px-4 py-2  text-pink-500 rounded-md hover:underline font-medium"
 %>
    </div>
<% end %>

<script>
  // JavaScript function to update the image preview
  var loadFile = function(event) {
    var reader = new FileReader();
    reader.onload = function(){
      var output = document.getElementById('preview_img');
      output.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);
  };
</script>
