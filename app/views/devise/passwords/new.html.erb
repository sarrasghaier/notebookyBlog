<div class="text-4xl mt-8 mx-auto my-6 font-bold  text-center text-pink-300 hover:text-pink-500 "><h2>Forgot your password?</h2></div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class: 'max-w-lg mx-auto ' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-28 ">
    <%= f.label :email, class:"block  text-sm font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 shadow-black shadow-lg" %>
  </div>

  <div class="actions mt-4 mb-4 flex justify-center ">
    <%= f.submit "Send me reset password instructions" %>
  </div>
  <div class="flex gap-4 flex-wrap justify-center">
  <%= link_to "Log in", new_user_session_path,class:" uppercase py-2 px-8 bottom-0 left-0 rounded-lg bg-transparent border-2 border-pink-500 text-pink-500 dark:text-black hover:bg-pink-500 hover:text-white text-md"%>
  <%= link_to "Back", root_path,class:" uppercase py-2 px-8 bottom-0 left-0 rounded-lg bg-transparent border-2 border-pink-500 text-pink-500 dark:text-black hover:bg-pink-500 hover:text-white text-md"%>
   </div>
<% end %>

