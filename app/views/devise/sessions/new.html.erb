<div class="text-4xl mt-6 mx-auto my-6 font-bold  text-center text-pink-300 hover:text-pink-500 "><h2>Log in</h2></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { class: 'max-w-lg mx-auto ' }) do |f| %>
  <div class="field mb-4 mt-8 ">
    <%= f.label :email , class: 'block mb-2 text-sm font-medium text-gray-700' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 shadow-black shadow-lg" %>
  </div>

  <div class="field mb-4 mt-8 ">
    <%= f.label :password , class: 'block mb-2 text-sm font-medium text-gray-700'  %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 shadow-black shadow-lg" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4 mt-8 ">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mb-4 mt-8 gap-2 flex justify-center ">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class:"inline-flex items-center px-4 py-2 bg-pink-300 text-white rounded-md hover:bg-gray-700 font-medium" %><br />
    <%= link_to "Back",root_path,class:"inline-flex items-center px-4 py-2 bg-pink-300 text-white rounded-md hover:bg-gray-700 font-medium"%>
  </div>
      <div class="actions mb-4 mt-8 gap-2 flex justify-center ">
      <%= f.submit "Log in",class:"  uppercase py-2 px-8 bottom-0 left-0 rounded-lg bg-transparent border-2 border-pink-500 text-pink-500 dark:text-black hover:bg-pink-500 hover:text-white text-md"  %>
  </div>
  
<% end %>

